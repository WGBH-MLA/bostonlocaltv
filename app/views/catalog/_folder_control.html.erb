<%-   
  # pass in local :document with a SolrDocument
  method = (item_in_folder?(document.id) ? "delete" : "put")
  label = (item_in_folder?(document.id) ? "Unselect" : "Select")
  cssClass = (item_in_folder?(document.id) ? "deleteFolder" : "addFolder")
  v_count = (get_vote_count?(document.id))
-%>

<%= form_tag(ulr_for_options={:action => "get_count"}, options={:method => method, :class=> "#{cssClass}", "data-doc-id" => document.id, :title=>h(document[document_show_link_field])}) do %>
<%= hidden_field_tag 'item_id', document.id %>
<%= hidden_field(:bookmark, :title, :value => document[document_show_link_field]) %> 
<%= image_submit_tag("button-sm.png") %>
<% end %>
<% if v_count == "2" %>
<b><i><%= v_count %> votes received</i></b>
<% else %>
<b><i> </i></b>
<% end %>
<%= link_to 'my item', items_path %>
