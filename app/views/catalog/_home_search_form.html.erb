<div id="search_home" class="search_home">
 <div id="inner_search">
  <%= form_tag catalog_index_path, :method => :get do %>
    <h2> Search collections: </h2>
    <br>
    <%= text_field_tag :q, params[:q], :class => "q", :width=>"137", :placeholder => "search" %>
     <%= hidden_field_tag :search_field, 'all_fields' %>
    <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>
     <%= image_submit_tag("magnifying_glass.gif", :alt => "search", :class => 'submit') %>
  <% end %>
 </div>


