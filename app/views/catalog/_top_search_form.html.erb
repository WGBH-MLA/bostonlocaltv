<div id="top_search" class="search">
  <%= form_tag catalog_index_path, :method => :get do %>
    <div class="q_field">
      <%= text_field_tag :fq, params[:fq], :class => "fq", :placeholder => "search" %>
      
    <%= hidden_field_tag :search_field, 'all_fields' %>
    <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page, :id]) %>        
    
    <%= image_submit_tag("magnifying_glass.gif", :alt => "search", :class => 'submit') %>
   <%= render_search_context_options %>
  </div>
  <% end %>

</div>
