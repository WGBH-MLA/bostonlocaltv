<% @page_title = "#{@document[:title_s].first.to_s} - #{application_name}" %>
<% extra_head_content << render_link_rel_alternates %>
<% sidebar_items << render(:partial => 'catalog/show_sidebar', :locals => {:document => @document}) %>

<%#= render 'previous_next_doc' %>

<%# this should be in a partial -%>
<div id="document" class="<%= render_document_class %>">
  <div id="doc_<%= @document.id.to_s.parameterize %>">
    <div class="header">
      <div class="title">
        <h1><%= @document[:title_s].first.to_s %></h1>
      </div>
      
      <div class="tools">
          <%= render :partial => 'show_tools', :locals => {:document => @document} %>
          <%#= render :partial => 'show_cart_tools', :locals => {:document => @document} %>
      </div>
    </div>

    <% # bookmark/folder functions -%>
    <%#= render_show_doc_actions @document %>     

         <%# record is visited; information is saved -%> 
          <% title = @document[:title_s].to_s %>
          <% doc_id = @document.id %>

    <div class="document">
      <p>
        <% if current_user && current_user.requested_artifact?(@document.id) %>
          <%= "You have requested this item" %>
        <% elsif current_user && !current_user.requested_artifact?(@document.id) && @artifact %>
          <%= "Currently in the digitization process..." %>
          <%= link_to "Track this item", digitizations_path(:id => @document.id), method: "POST" %>
        <% else %>
          Please <%= link_to 'log in', new_user_session_path %> or <%= link_to 'sign up', new_user_registration_path %> to request this item
        <% end %>
      </p>
      <%= render_document_partial @document, :show %>
    </div>
  </div>
</div>

  <% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
    <!-- 
         // COinS, for Zotero among others. 
         // This document_partial_name(@document) business is not quite right,
         // but has been there for a while. 
    -->
    <span class="Z3988" title="<%= @document.export_as_openurl_ctx_kev(document_partial_name(@document)) %>"></span>
  <% end %>
