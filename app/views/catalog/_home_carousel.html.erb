 <script>
                $(function(){
                        $('#collections').slides({
                                preload: true,
                                preloadImage: 'blacklight/loading.gif',
                                play: 15000,
                                pause: 5500,
                                hoverPause: true,
                                animationStart: function(current){
                                        $('.caption').animate({
                                                bottom:-35
                                        },200);
                                        if (window.console && console.log) {
                                                // return of current slide number
                                                console.log('animationStart on slide: ', current);
                                        };
                                },
                                animationComplete: function(current){
                                        $('.caption').animate({
                                                bottom:0
                                        },400);
                                        if (window.console && console.log) {
                                                // return of current slide number
                                                console.log('animationComplete on slide: ', current);
                                        };
                                },
                                slidesLoaded: function() {
                                        $('.caption').animate({
                                                bottom:0
                                        },400);
                                }
                        });
                });
</script>
 
