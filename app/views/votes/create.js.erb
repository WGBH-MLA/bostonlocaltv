$(document).ready(function(){  
  // NOTE: before, the js incremented the count. We don't want to do that anymore, we want to give
  // the JS the right value from the get-go.
  var count = parseInt('<%= h @item.votes_count -%>'),
      doc_id = '<%= h @item.item_id -%>',
      votesText = count + ((count > 1) ? ' votes' : ' vote') + ' received'

  $('#vote_button_' + doc_id)
    .attr({
      disabled: 'disabled',
      src: "http://bostonlocaltv.org/assets/button-voted-sm.png"
    });

  $('#votes_' + doc_id).html(votesText)
});
 
