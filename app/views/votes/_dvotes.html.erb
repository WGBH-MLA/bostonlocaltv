<%-   
  # pass in local :document with a SolrDocument                  
  method = (item_in_folder?(item_id) ? "delete" : "put")
  label = (item_in_folder?(item_id) ? "Unselect" : "Select")
  cssClass = (item_in_folder?(item_id) ? "deleteFolder" : "addFolder")
  v_count = vcount
-%> 
<%= form_for( setup_vote(@vote), :remote=> true, :disabled=>true, :html=>{:class=> "#{item_id} #{cssClass}", "data-doc-id" => item_id} ) do |f| %>
<%= f.hidden_field "item_id", :value => item_id %>
<%= image_submit_tag("button-voted-sm.png", :id => "vote_button_#{item_id}") %>
<% end %>
<% if v_count.blank? %>
<% elsif v_count == 1 %>
<b class='item_id'><i>1 vote received </i></b>
<% else %>
<b class='item_id'><i><%= v_count %> votes received </i></b>
<% end %>


